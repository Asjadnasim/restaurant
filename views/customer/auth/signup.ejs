<%- include('../../shared/includes/head', {pageTitle: 'SignUp' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
  </head>

  <body>
    <%- include('../../shared/includes/header') %>
      <main>
        <h1>Create New Account</h1>
        <% if (inputData.errorMessage) { %>
          <section class="alert">
            <h2>Invalid Input</h2>
            <p>
              <%= inputData.errorMessage %>
            </p>
          </section>
          <% } %>
            <form action="/signup" method="POST">
              <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
              <p>
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
              </p>
              <p>
                <label for="confirmEmail">Confirm E-mail</label>
                <input type="email" id="confirmEmail" name="confirmEmail" value="<%= inputData.confirmEmail %>"
                  required>
              </p>
              <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>" minlength="6"
                  required>
              </p>
              <hr>
              <p>
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" name="fullName" value="<%= inputData.fullName %>" required>
              </p>
              <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
              </p>
              <p>
                <label for="postal">Postal Code</label>
                <input type="text" id="postal" name="postal" value="<%= inputData.postal %>" minlength="5" maxlength="7"
                  required>
              </p>
              <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
              </p>
              <button class="btn">Create Account</button>
              <p id="switch-form">Already have an account?<a href="/login">Login instead</a></p>
            </form>
      </main>
      <%- include('../../shared/includes/footer') %>